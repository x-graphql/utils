{
    "name": "x-graphql/utils",
    "description": "Utilities for working with GraphQL",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "XGraphQL\\Utils\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "XGraphQL\\Utils\\Test\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.2",
        "webonyx/graphql-php": "^15.9"
    },
    "config": {
        "sort-packages": true
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    }
}
